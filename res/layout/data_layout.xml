<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabData"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:orientation="vertical" >

    <!-- Screen Design for Photos -->

    <LinearLayout
        android:id="@+id/dataprogresslayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/dataprogress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cancelDataUpdate"
            android:visibility="visible" />

        <TextView
            android:id="@+id/dataCancelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:onClick="cancelDataUpdate"
            android:text="@string/datacanceltext"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dataselectorlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Spinner
            android:id="@+id/dataSpinner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <Button
            android:id="@+id/dataRefreshButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/dataosvezi" />
    </LinearLayout>

    <ListView
        android:id="@+id/dataList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false" >
    </ListView>

</LinearLayout>